#!/usr/bin/env php
<?php declare(strict_types=1);

foreach ([$_composer_autoload_path ?? __DIR__ . '/../../../autoload.php', __DIR__ . '/../vendor/autoload.php'] as $file) {
    if (file_exists($file)) {
        require $file;
        break;
    }
}

$configPath = null;
$workingDirectory = null;

for ($i = 1; $i < count($argv); $i++) {
    if (str_starts_with($argv[$i], '--config=')) {
        $configPath = substr($argv[$i], strlen('--config='));

    } else if ($workingDirectory === null) {
        $workingDirectory = $argv[$i];

    } else {
        echo PHP_EOL . 'Too many arguments.' . PHP_EOL . PHP_EOL;
        exit(1);
    }
}

if ($configPath === null && $workingDirectory === null) {
    echo PHP_EOL . 'Working directory not specified.' . PHP_EOL . PHP_EOL;
    exit(1);
}

$configPath ??= __DIR__ . '/../config/autodoc.php';
$config = new AutoDoc\Config(require $configPath);

$commandOutput = (new AutoDoc\Commands\UpdateTypeScriptStructures($config))->run($workingDirectory);

foreach ($commandOutput as $message) {
    if (isset($message['filePath'], $message['processedTags'])) {
        $tagsText = $message['processedTags'] . ' tag' . ($message['processedTags'] === 1 ? '' : 's');

        echo 'Updated ' . $message['filePath'] . ' (' . $tagsText . ')' . PHP_EOL;

    } else if (isset($message['filePath'], $message['exportedRequests'], $message['exportedResponses'])) {
        $requestsResponsesText = $message['exportedRequests'] . ' request' . ($message['exportedRequests'] === 1 ? '' : 's') . ', '
            . $message['exportedResponses'] . ' response' . ($message['exportedResponses'] === 1 ? '' : 's');

        echo 'Updated ' . $message['filePath'] . ' (' . $requestsResponsesText . ')' . PHP_EOL;

    } else if (isset($message['error'])) {
        if ($fimessagele['error'] instanceof Throwable) {
            echo PHP_EOL . '[ERROR] ' . $message['error']->getMessage() . ' [' . $message['error']->getFile() . ':' . $message['error']->getLine() . ']' . PHP_EOL . PHP_EOL;

        } else {
            echo PHP_EOL . '[ERROR] ' . $message['error'] . PHP_EOL . PHP_EOL;
        }
    }
}
